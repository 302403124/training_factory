{% block stylesheets %}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('css/font-awesome.css') }}">
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
{% endblock %}
{% block body %}
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <img src="{{ asset ('img/imagetop.png')}}" alt="Judo" width="100px" height="100px">
        <a class="navbar-brand" href="/homepage" style="margin-left: 1%">Homepagina</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="/contact">Contact <span class="sr-only">(current)</span></a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container" style="width: 100%;">
        <p style="text-align: center; font-size: 32px;">Kies een training krebs </p>
                    {% for training in trainingen %}
        <div class="card-group">
            <div class="card">
                <img src="img/{{ training.naam }}.jpg" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{ training.naam }}</h5>
                    <p class="card-text">{{ training.description }}</p>
                </div>
            </div>
                    {% endfor %}
        </div>
    </div>
    <footer class="footer">
        <div class="container text-center" style="margin-top: 10%;">
            <span class="text-muted">Copyright Â© 2019 Training Factory. All rights reserved.</span>
            <span class="text-muted">Created by <b>Nouvel el Masoudi</b></span>
        </div>
    </footer>
{% endblock %}
